{
  "manifest_version": 3,
  "name": "Disable Pull to Refresh",
  "version": "0.1.0",
  "description": "A lightweight extension to disable the pull-to-refresh feature on Microsoft Edge on touch devices",
  "icons": {
    "16": "icons/16px-stop-icon.png",
    "32": "icons/32px-stop-icon.png",
    "64": "icons/64px-stop-icon.png",
    "128": "icons/128px-stop-icon.png",
    "256": "icons/256px-stop-icon.png",
    "512": "icons/512px-stop-icon.png"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/16px-stop-icon.png",
      "32": "icons/32px-stop-icon.png",
      "64": "icons/64px-stop-icon.png",
      "128": "icons/128px-stop-icon.png",
      "256": "icons/256px-stop-icon.png",
      "512": "icons/512px-stop-icon.png"
    }
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "author": "htbkoo"
}
